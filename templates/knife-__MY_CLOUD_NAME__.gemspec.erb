# -*- encoding: utf-8 -*-
$:.push File.expand_path("../lib", __FILE__)
require "knife-<%= __MY_CLOUD_NAME__.downcase %>/version"

Gem::Specification.new do |s|
  s.name        = "knife-<%= __MY_CLOUD_NAME__.downcase %>"
  s.version     = Knife::<%= __MY_CLOUD_NAME__.capitalize %>::VERSION
  s.platform    = Gem::Platform::RUBY
  s.has_rdoc = true
  s.extra_rdoc_files = ["README.md", "LICENSE" ]
  s.authors     = ["<%= __PLUGIN_AUTHOR__ %>"]
  s.email       = ["<%= __PLUGIN_AUTHOR_EMAIL__ %>"]
  s.homepage    = "<%= __PLUGIN_HOME_PAGE__ %>"
  s.summary     = %q{TODO}
  s.description = %q{TODO}

  s.files         = `git ls-files`.split("\n")
  s.test_files    = `git ls-files -- {test,spec,features}/*`.split("\n")
  s.executables   = `git ls-files -- bin/*`.split("\n").map{ |f| File.basename(f) }
  s.require_paths = ["lib"]

  s.add_dependency "knife-cloud"

  %w(rspec-core rspec-expectations rspec-mocks rspec_junit_formatter).each { |gem| s.add_development_dependency gem }
end
